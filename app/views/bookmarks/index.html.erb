<h1><%= @current_user.first_name %> <%= @current_user.last_name %>'s bookmarks</h1>

<form action="/insert_bookmark" method="post">

  <select name="query_movie_id" id="movie_id_box">
    <%= Movie.all.order(:title).each do |a_movie| %>
      <option value="<%= a_movie.id %>">
        <%= a_movie.title %>
      </option>
    <% end %>
  </select>
  <button>
    Bookmark this movie!
  </button>
</form>
<hr>
<table class="table" border="1">
  <tr>
    <th>
      Movie
    </th>

    <th>
      Created at
    </th>

    <th>
    </th>
  </tr>
  <% @list_of_bookmarks.each do |bookmark| %>
  <tr>
    <td>
      <a href="/movies/<%= bookmark.movie.id %>">
        <%= bookmark.movie.title %>
      </a>
    </td>

    <td>
      <%= time_ago_in_words(bookmark.created_at) %> ago
    </td>

    <td>
      <a href="/delete_bookmark/<%= bookmark.id %>">
        Un-bookmark
      </a>
    </td>
  </tr>
  <% end %>
</table>
